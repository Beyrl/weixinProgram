<!--pages/tip/tip.wxml-->
<view class="wrapper">
  <view wx:for="{{tiplist}}" 
        wx:for-item="tiplist" 
        wx:key="{{tiplist.itemId}}" 
        animation="{{animationData}}"
        data-key='{{tiplist.itemId}}'
        class="tiplist {{state==tiplist.itemId?'active':''}}"
        bindtap='showChildList'>
    <view 
        class="tiplist-name"
        hover-class="turn-gray" 
        hover-start-time="0" 
        hover-stay-time="0"  
    >
      <text>{{tiplist.title}}</text>
      <view class="icon-box" >
        <image class="icon-next"  src="../../assets/image/arrow-down.png"></image>
      </view>
    </view>
    <view class="tiplist-content" >
      <view class="tiplist-group"
            wx:for="{{tiplist.child}}" 
            wx:for-item="child" 
            wx:key="{{child.id}}" >
        11
      </view>
    </view>
  </view>
</view>
