/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.section-wrapper{
  background:#fdfdfd;
  padding:10rpx 20rpx;
}
.section-title{
  width:100%;
  display: block;
  font-size:50rpx;
  font-weight: bold;
  overflow:hidden;
  white-space:normal;
  word-break:break-all;
  word-wrap:break-word;
 
}
.section-detail,.section-notice,.section-main-title{
  display: inline-block;
  font-size:30rpx;
  line-height:56rpx;
  color:#999;
}
.section-main{
  margin-top:50rpx;
  width:100%;
  padding:10rpx 0 100rpx;
  border-radius:8rpx;
  background:#fcfcfc;
}
.section-notice{
  margin:50rpx 0 30rpx;
  width:100%;
  padding:10rpx;
  border-radius:8rpx;
  background:#f3eeee;
  color:black;
}
.section-main-title{
  margin-top:20rpx;
}
.text-indent{
  text-indent: 2em;
}
.section-li{
  font-size:34rpx;
  color:#EE9C6A;
}
.center-li{
  width:80%;
  margin:auto;
}
.mg10{
  margin:30rpx 0;
}
.mgb30{
  margin-bottom:30rpx;
}
.section-code{
  margin:10rpx 0;
  color:#fd9554;
  font-size:30rpx;
}
.code-wrapper{
  background:rgba(179, 221, 209,0.4);
  padding:20rpx 20rpx;
  margin-bottom:30rpx;
}
.little-title{
  display: inline-block;
  font-size:32rpx;
  line-height:56rpx;
  color:black;
}
.span-text{
  color:red;
  font-weight:bold;
}